generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Family {
  id      Int     @id @default(autoincrement())
  name    String
  users   User[]
  tasks   Task[]
  events  Event[]
  documents Document[]
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  role       String     @default("member")
  familyId   Int
  family     Family     @relation(fields: [familyId], references: [id])
  comments   Comment[]
  assignedTasks Task[]  @relation("TaskAssignees")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  priority    String     @default("media")
  status      String     @default("pendente")
  dueDate     DateTime?
  createdBy   Int
  familyId    Int
  family      Family     @relation(fields: [familyId], references: [id])
  assignees   User[]     @relation("TaskAssignees")
  comments    Comment[]  @relation("TaskComments")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  recurrence  String?
  familyId    Int
  family      Family    @relation(fields: [familyId], references: [id])
  comments    Comment[] @relation("EventComments")
}

model Document {
  id          Int       @id @default(autoincrement())
  name        String
  category    String?
  fileUrl     String
  uploadedBy  Int
  familyId    Int
  family      Family    @relation(fields: [familyId], references: [id])
  comments    Comment[] @relation("DocumentComments")
}

model Comment {
  id         Int       @id @default(autoincrement())
  content    String
  createdAt  DateTime  @default(now())
  itemType   String
  itemId     Int
  userId     Int
  user       User      @relation(fields: [userId], references: [id])

  taskId     Int? 
  task       Task?     @relation("TaskComments", fields: [taskId], references: [id])

  eventId    Int?
  event      Event?    @relation("EventComments", fields: [eventId], references: [id])

  documentId Int?
  document   Document? @relation("DocumentComments", fields: [documentId], references: [id])
}
